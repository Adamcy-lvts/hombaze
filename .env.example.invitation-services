# ===========================================
# INVITATION SERVICES CONFIGURATION
# ===========================================
# Add these variables to your .env file

# WhatsApp Business API Configuration
# Get credentials from: https://developers.facebook.com/docs/whatsapp
# See WHATSAPP_SETUP_GUIDE.md for complete setup instructions
WHATSAPP_ENABLED=false
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here
WHATSAPP_APP_ID=your_app_id_here
WHATSAPP_APP_SECRET=your_app_secret_here

# SMS Services Configuration
SMS_ENABLED=false
SMS_DEFAULT_PROVIDER=termii

# Termii SMS Provider (Nigerian)
# Get API key from: https://termii.com
TERMII_API_KEY=your_termii_api_key_here
TERMII_SENDER_ID=HomeBaze
TERMII_CHANNEL=generic

# Bulk SMS Nigeria Provider
# Get credentials from: https://www.bulksmsnigeria.com
BULK_SMS_API_TOKEN=your_bulk_sms_api_token_here
BULK_SMS_SENDER_ID=HomeBaze

# Twilio SMS Provider (International)
# Get credentials from: https://www.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# ===========================================
# SETUP INSTRUCTIONS
# ===========================================
# 1. Choose your SMS provider and set SMS_DEFAULT_PROVIDER
# 2. Configure credentials for your chosen provider
# 3. Set SMS_ENABLED=true to enable SMS functionality
# 4. For WhatsApp, set WHATSAPP_ENABLED=true and configure credentials
# 5. Run: php artisan config:cache after updating .env